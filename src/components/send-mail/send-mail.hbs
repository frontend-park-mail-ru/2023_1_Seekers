<div class="send-mail">
    <div class="send-mail__area send-mail__area_size send-mail__area_color">
        <div class="send-mail__header send-mail__header_size">

            <img src='{{this.profile.avatar}}' class="send-mail__image skeleton__block" alt="">

            <div class="send-mail__header_details">
                <div class="send-mail__author">
                    <p class="send-mail__to font-normal-0 send-mail__text_color">Кому:</p>
                    <div class="send-mail__recipients send-mail__input-form send-mail__input-form_indent">

                        <input class="send-mail__text_color send-mail__input-form_size send-mail__input-form_color" type="{{this.inputs.recipients.type}}"
                               name="{{this.inputs.recipients.name}}" maxlength="{{this.inputs.recipients.maxlength}}"
                               id="{{this.inputs.recipients.name}}" required/>
                    </div>
                    {{{ this.closeButton }}}
                </div>

                <div class="send-mail__delimiter"></div>

                <div class="send-mail__author send-mail__invisible">
                    <p class="send-mail__to send-mail__invisible font-normal-0 send-mail__text_color">От:</p>
                    <p class="send-mail__input-form send-mail__invisible send-mail__input-form_indent font-normal-0 send-mail__text_color send-mail__input-form_size send-mail__input-form_color"
                           id="send-mail__from"></p>

                </div>
                <div class="send-mail__delimiter send-mail__invisible"></div>

                <div class="send-mail__author">
                    <p class="send-mail__to font-normal-0 send-mail__text_color">Тема:</p>
                    <input class="send-mail__input-form font-normal-0 send-mail__input-form_indent send-mail__text_color send-mail__input-form_size send-mail__input-form_color"
                           type="{{this.inputs.topic.type}}"
                           name="{{this.inputs.topic.name}}" maxlength="{{this.inputs.topic.maxlength}}"
                           id="{{this.inputs.topic.name}}" required/>
                    <div class="send-mail__fromB" id="send-mail__fromB">
                        <div class="send-mail__fromB__text">
                            От кого:
                        </div>
                    </div>

                </div>
                <div class="send-mail__delimiter"></div>
            </div>

        </div>
        <div class="send-mail__actions">
            {{#each this.actionButtons}}
                <div class="send-mail__actions__button">
                    {{{this}}}
                </div>
            {{/each}}
        </div>
        <div class="send-attachment-list" id="send-attachment-list">
            <div class="send-attachment-list__area" id="send-attachment-list__area">
            </div>
        </div>
        {{{this.formatter}}}
        <div class="send-mail__content send-mail__content_color">
            {{{this.textArea}}}
        </div>
        <div class="send-mail__bottom-actions send-mail__bottom-actions_size send-mail__bottom-actions_color">
            {{#each this.footerButtons}}
                <div class="send-mail__bottom-button">
                    {{{this}}}
                </div>
            {{/each}}
        </div>
    </div>
</div>
