<a id="letter-frame-id-{{message_id}}" href="{{message_id}}" class="letter-frame" data-section="{{ href }}">
    <div class="letter-read-state-frame {{#if seen}} letter-is-read {{else}} letter-is-unread {{/if}}" data-section="{{ message_id }}">

    </div>
    <div class="letter-content-frame">
        <div class="letter-content-header-frame">
            <div class="letter-content-header-image-frame">
                    <img src='{{avatar}}' class="letter-content-image-letter" alt="{{from_user_email}}">
            </div>
            <div class="letter-content-header-text-frame">
                <label class="letter-content-header-name-text font-normal-0">
                    {{from_user_email}}
                </label>
                <div class="letter-content-header-text-bottom-frame">
                    <label class="letter-content-header-second-text font-caption-0">
                        {{title}}
                    </label>
                    <label class="letter-content-header-second-text font-caption-0 letter-content__text_color" style="text-align: right">
                        {{created_at}}
                    </label>
                </div>
            </div>
        </div>
        <div class="letter-content-text-frame">
            <label class="letter-content-text font-caption-0 letter-content__text_color">
                {{text}}
            </label>
        </div>
    </div>
</a>
